<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:context=".Price">

        <TextView
            android:id="@+id/expectedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="304dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="158dp"
            android:text="Expected Price: "
            android:textColor="@color/textDark"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="249dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="16dp"
            android:text="Minimum Price: "
            android:textColor="@color/textDark"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/minimum_price"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/minimum_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="250dp"
            android:layout_marginEnd="65dp"
            android:hint="Rs."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/expectedPrice"
            app:layout_constraintVertical_bias="1.0"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:text="Maximum Price:"
            android:textColor="@color/textDark"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/maximum_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/maximum_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="142dp"
            android:layout_marginEnd="60dp"
            android:hint="Rs."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/expectedPrice"
            app:layout_constraintVertical_bias="0.96"
            android:inputType="number"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="139dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="110dp"
            android:background="@drawable/button_background"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expectedPrice" />

        <ProgressBar
            android:id="@+id/progressBarRegiter"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            android:visibility="gone"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>